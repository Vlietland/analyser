{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@renderer/*": ["renderer/*"],
      "@ui/*": ["ui/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}